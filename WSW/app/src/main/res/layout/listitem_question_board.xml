<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:paddingLeft="27dp"
    android:paddingTop="14dp"
    android:paddingRight="22dp"
    android:paddingBottom="13dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_profile_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_profile_emoji" />

        <TextView
            android:id="@+id/text_anonymous"
            style="@style/Text12_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_toRightOf="@id/img_profile_emoji"
            android:text="@string/user_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_que_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="10:01" />

    <TextView
        android:id="@+id/tv_contentPreview"
        style="@style/Text12_Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        tools:text="컴공 2학년인데 맥북을 살지 그램을 살지.." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_thumb_up" />

        <TextView
            android:id="@+id/text_count_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            tools:text="3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/text_count_comm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="3" />
    </LinearLayout>

</RelativeLayout>